---
import Layout from '../Layout.astro';
---
<Layout>
  <!-- Logo -->
  <div class="mb-8 animate-fadeInUp">
    <div class="relative h-32 w-32 cursor-pointer transition-transform duration-300 ease-in-out hover:scale-110 hover:rotate-6" onclick="createParticles(event)">
      <div class="absolute h-32 w-32 rounded-full border-8 border-transparent border-t-cyan-400 border-r-cyan-400 animate-spin-slow" style="transform: rotate(-45deg); animation: spin 8s linear infinite;"></div>
      <div class="absolute top-[15px] left-[15px] h-24 w-24 rounded-full border-8 border-transparent border-b-blue-500 border-l-blue-500 animate-spin-reverse-slow" style="transform: rotate(45deg); animation: spin 12s linear infinite reverse;"></div>
    </div>
  </div>

  <!-- Title -->
  <h1 class="mb-12 animate-fadeInUp text-center text-5xl font-black tracking-tighter text-transparent sm:text-6xl md:text-8xl bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-500 bg-clip-text" style="animation-delay: 0.2s;">CARBON</h1>

  <!-- Blob Button -->
  <div class="mt-8 animate-fadeInUp" style="animation-delay: 0.6s;">
    <button class="relative overflow-hidden rounded-full border-2 border-white/20 bg-white/10 px-8 py-4 text-lg font-semibold text-white no-underline backdrop-blur-xl transition-all duration-300 ease-in-out hover:-translate-y-0.5 hover:border-white/40 hover:bg-white/20 hover:shadow-2xl hover:shadow-cyan-400/30">
      Click Me
    </button>
  </div>
</Layout>
