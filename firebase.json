{
  "database": {
    "rules": "firebase-rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/package-lock.json",
      "**/test-*.js",
      "**/test-*.html",
      "**/AI_SETUP.md",
      "**/README.md",
      "**/*.md"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "api"
  }
} 