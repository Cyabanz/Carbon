{
  "rules": {
    "game-rooms": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-rooms": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-physics": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-players": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pages": {
      "games": {
        ".read": true,
        ".write": "auth != null"
      },
      "index": {
        ".read": true,
        ".write": "auth != null"
      },
      "history": {
        ".read": "auth != null",
        ".write": "auth != null"
      },
      "profile": {
        ".read": "auth != null",
        ".write": "auth != null"
      },
      "play": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "user-profiles": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "game-history": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "game-sessions": {
      ".read": "auth != null",
      "$sessionId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    ".read": false,
    ".write": false
  }
}