{
  "rules": {
    "game-rooms": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-rooms": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-physics": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "pong-players": {
      ".read": true,
      "$roomId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "conversations": {
          "$conversationId": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        "usageData": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        },
        "searchHistory": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}